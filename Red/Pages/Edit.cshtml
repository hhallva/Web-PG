@page "{userId}"

@model Red.Pages.EditModel
@{
    ViewData["Title"] = $"{Model.CurrentUser.Login}-Редактирование";
}

<link rel="stylesheet" href="~/css/editPage.css" />

<div class="user-info">
    <h2>Информация о пользователе</h2>
    <form method="post">
        <input type="hidden" asp-for="@Model.CurrentUser.Id" />
        <p>
            <label>Логин:</label><br />
            <input type="text" asp-for="@Model.CurrentUser.Login" />
            <span asp-validation-for="CurrentUser.Login" class="text-danger"></span>
        </p>
        <p>
            <label>Пароль:</label><br />
            <input type="password" asp-for="@Model.CurrentUser.Password" value="@Model.CurrentUser.Password" />
            <span asp-validation-for="CurrentUser.Password" class="text-danger"></span>
        </p>
        <p>
            <label>Телефон:</label><br />
            <input type="tel" asp-for="@Model.CurrentUser.Phone" />
            <span asp-validation-for="CurrentUser.Phone" class="text-danger"></span>
        </p>
        <input type="submit" value="Сохранить" />
    </form>

    @if (Request.Method == "POST")
    {
        <p class="message">@Model.Message</p>
    }
</div>